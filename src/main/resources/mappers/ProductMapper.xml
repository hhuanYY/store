<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" 
	"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="cn.huan.t_store.mapper.ProductMapper">

	<resultMap type="cn.huan.t_store.entity.Product" id="ProductEntity">
		<id column="id" property="id"/>
		<result column="category_id" property="categoryId"/>
		<result column="item_type" property="itemType"/>
		<result column="sell_point" property="sellPoint"/>
		<result column="created_user" property="createdUser" />
		<result column="created_time" property="createdTime" />
		<result column="modified_user" property="modifiedUser" />
		<result column="modified_time" property="modifiedTime" />
	</resultMap>

	<!-- 基于商品上架的前提下，显示商品 -->
	<select id="findNewArrival" resultMap="ProductEntity">
		SELECT 
			* 
		FROM 
			t_product 
		WHERE 
			status=1 
		ORDER BY 
			created_time DESC 
		LIMIT 
			0,10
	</select>

	<select id="findHotSort" resultMap="ProductEntity">
		SELECT
			*
		FROM
			t_product
		WHERE
			status=1
		ORDER BY
			priority DESC
		LIMIT
			0,10
	</select>
	
	
	<!-- 根据商品id查询商品 -->
	<!-- Product findById(Integer id); -->
	<select id="findById" resultMap="ProductEntity">
		SELECT 
			* 
		FROM 
			t_product 
		WHERE 
			id=#{id} 
	</select>


	<select id="listByids" resultMap="ProductEntity">
		SELECT
			p.*, COUNT(url) AS clickNum
		FROM
			t_product p LEFT JOIN t_log l ON p.id = l.pid
		WHERE
			p.id IN(#{id1},#{id2},#{id3})
		GROUP BY
			l.url
		ORDER BY
			clickNum DESC
	</select>


	<select id="findLikeList" resultMap="ProductEntity" >
		SELECT
		DISTINCT title,image,price
		FROM
			t_product
		<if test="keyName != '' and keyName != null">
			WHERE title LIKE CONCAT('%',#{keyName},'%')
		</if>
	</select>

</mapper>





